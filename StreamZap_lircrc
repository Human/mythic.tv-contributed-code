begin
   prog = mythtv
   # skip backward
   button = |<<
   config = PgUp
end

begin
   prog = mythtv
   # skip forward
   button = >>|
   config = PgDown
end

begin
   prog = mythtv
   button = RECORD
   config = r
end

begin
   prog = mythtv
   # rewind
   button = <<
   config = <
end

begin
   prog = mythtv
   # fast forward
   button = >>
   config = >
end

begin
   prog = mythtv
   button = RED
   # aka LIVE
   # Delete
   config = d
end

begin
   prog = mythtv
   button = GREEN
   # aka PLAY
   # Info
   config = i
end

begin
   prog = mythtv
   button = YELLOW
   # aka PRGM
   # change aspect ratio
   config = w
